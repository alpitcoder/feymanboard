<div class="py-5">
  <%= form_for @topic, as: :topic, url: user_topics_path do |f| %>

    <div class="row my-lg-3">
      <div class="col-lg offset-lg-1">
        <div class="form-group">
          <%= f.text_field :title, class: "form-control", placeholder: "Title", required: true %>
        </div>
      </div>
    </div>

    <div class="row my-lg-3">
      <div class="col-lg offset-lg-1">
        <div class="form-group">
          <%= f.text_area :content, class: "form-control", placeholder: "Content", required: true %>
        </div>
      </div>
    </div>

    <div class="row my-lg-3">
      <div class="col">
        <div class="form-group">
          <%= f.submit class: "btn btn-success"%>
        </div>
      </div>
    </div>
  <% end %>
</div>
