<div class="py-5">
  <%= form_for @user, as: :user, url: users_path do |f| %>

    <div class="row my-lg-3">
      <div class="col-lg offset-lg-1">
        <div class="form-group">
          <%= f.text_field :user_name, class: "form-control", placeholder: "User Name", required: true %>
        </div>
      </div>
    </div>

    <div class="row my-lg-3">
      <div class="col">
        <div class="form-group">
          <%= f.submit class: "btn btn-success"%>
        </div>
      </div>
    </div>
  <% end %>
</div>
